<view class='user-repair'>
   
      <view class='user-repair-title'>申报车辆故障</view>

      <view class='scan-code'>
            <image class='scanCode-img' mode='widthFix' src='../../images/scan_call.png'></image>
            <view class='scan-Inputinfo'>
               <input type='text' placeholder='扫码或手动输入车辆编码'></input>  
            </view>
      </view>  

      <view class='problem-list'>
            <checkbox-group class='problem-group'>
                 <label class='problem-label'>
                    <checkbox color='#f93' value=''>锁</checkbox>
                 </label>

                 <label class='problem-label'>
                    <checkbox color='#f93' value=''>车轮</checkbox>
                 </label>

                 <label class='problem-label'>
                    <checkbox color='#f93' value=''>座椅</checkbox>
                 </label>

                 <label class='problem-label'>
                    <checkbox color='#f93' value=''>刹车</checkbox>
                 </label>

                 <label class='problem-label'>
                    <checkbox color='#f93' value=''>雨蓬</checkbox>
                 </label>

                 <label class='problem-label'>
                    <checkbox color='#f93' value=''>二维码</checkbox>
                 </label>

                 <label class='problem-label'>
                    <checkbox color='#f93' value=''>其他</checkbox>
                 </label>
            </checkbox-group>  
      </view>

      <view class='problem-remark'>
            <textarea placeholder='备注' placeholder-style='color:#666;' maxlength='50' bindinput='countLen'></textarea>
            <view style='font-size:28rpx;color:#666;text-align:right;'>还可输入{{maxInputLen}}字</view>
      </view>

      <button class='hand-inProblem'>提交</button>

      <view class='contact-us'>
           <view class=''>联系客服</view>
           <view class=''>拨打客服电话：<text>0755-29648606</text> </view>
      </view>
</view>